<!--HOME PAGE FOR WHERE'S MY LANE? --> 
<!--*******************************-->

<% provide(:title, 'Home') %>
<head> 


<!--MAPS ****************--> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta charset="UTF-8">
    <style type="text/css">
    /*  html, body, #map_canvas { */
      #map_canvas {
        margin: 2%;
        padding: 30%;
        height: 100%;
      }
    </style>
    <script type="text/javascript"
        src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
    <script type="text/javascript">
      var map;
      function initialize() {
        var myOptions = {
          zoom: 8,
          center: new google.maps.LatLng(42.36691, -71.25921),
          mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        map = new google.maps.Map(document.getElementById('map_canvas'),
            myOptions);
      }

      google.maps.event.addDomListener(window, 'load', initialize);
    </script>
<!--MAPS ****************--> 

</head>

<body>
<div class="row-fluid"> 

  <!--UPDATES --> 
  <div class="span4">
    <table class = "table table-striped">
      <tr>
        <h2>Updates:</h2>
      </tr>
      <% @messages.each do |message| %>
        <tr>
          <td><strong><%= message.content %></strong></td>
        </br>
          <td><%= link_to 'Show', showMessage_path(message) %></td>
          <td><%= link_to 'Edit', editMessage_path(message) %></td>
          <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>

    <br />
  </div> <!--span4 --> 

  <!--MAP --> 
  <div class="span8" >
    <h2> Map: </h2> 
      <div id="map_canvas" style="width: 45%; height: 100%"></div>
  </div> 
</div> <!--row --> 
</body>